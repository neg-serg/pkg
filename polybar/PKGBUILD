_pkgname=polybar
pkgname="polybar-neg-git"
pkgver=3.5.6
pkgrel=1
pkgdesc="faster ls with pointless colours forked by neg"
arch=("any")
url="https://github.com/jaagr/polybar"
license=()
depends=()
optdepends=()
makedepends=()
provides=("polybar")
conflicts=("polybar" "polybar-git")
source=(
    "git+https://github.com/jaagr/polybar"
    "0001-net-another-format.patch"
)

sha256sums=(
    "SKIP"
    "SKIP"
)

pkgver() {
    echo 3.5.6
}

prepare() {
    cd $_pkgname
    git checkout master
    git submodule update --init --recursive
    patch -Np1 -i ../0001-net-another-format.patch
}

build() {
    cd $_pkgname
    mkdir build
    cd build
    cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr ..
    make -j10
}

package() {
    cd $_pkgname/build
    make DESTDIR=$pkgdir install
}
