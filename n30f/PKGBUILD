_pkgname=n30f
pkgname="n30f-git"
pkgver=1.0
pkgrel=1
pkgdesc="n30f is a quick hack to display a png in a borderless and transparent non-wm-managed window"
arch=("i686" "x86_64")
url="https://github.com/sdhand/n30f"
license=()
depends=()
optdepends=()
makedepends=()
provides=("xe")
conflicts=()
source=("git://github.com/sdhand/n30f.git")
sha256sums=("SKIP")

prepare() {
    true
}

build() {
    cd $_pkgname
    sed -i '/^PREFIX=/s;/usr/local;/usr;' ./Makefile
    make
}

package() {
    cd $_pkgname
    make DESTDIR=$pkgdir install
}
